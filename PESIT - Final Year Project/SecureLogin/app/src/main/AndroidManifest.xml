<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.securelogin">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OTPactivity"
            android:label="Verify OTP" />
        <activity
            android:name=".PasswordActivity"
            android:label="Set Password" />
        <activity
            android:name=".ACKactivity"
            android:label="Acknowledgement" />
        <activity
            android:name=".WelcomeActivity"
            android:label="Welcome!" />
        <activity
            android:name=".LoginActivity"
            android:label="Login" />
        <activity android:name=".bankPageActivity"
            android:label="XYZ Bank Home"></activity>
    </application>

</manifest>