<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.securelogin"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.android.securelogin.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.android.securelogin.OTPactivity"
            android:label="Verify OTP" />
        <activity
            android:name="com.example.android.securelogin.PasswordActivity"
            android:label="Set Password" />
        <activity
            android:name="com.example.android.securelogin.ACKactivity"
            android:label="Acknowledgement" />
        <activity
            android:name="com.example.android.securelogin.WelcomeActivity"
            android:label="Welcome!" />
        <activity
            android:name="com.example.android.securelogin.LoginActivity"
            android:label="Login" />
        <activity
            android:name="com.example.android.securelogin.bankPageActivity"
            android:label="XYZ Bank Home" />
    </application>

</manifest>